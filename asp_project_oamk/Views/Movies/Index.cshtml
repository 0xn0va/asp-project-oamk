@model IEnumerable<asp_project_oamk.Models.Movie>

@{
    ViewBag.Title = "Index";
}

<h2>Movies List</h2>

<button type="button" class="btn btn-danger btn-md">
    @Html.ActionLink("Add New Movie", "Create")
    </button>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Poster)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Yor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Producer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Actors)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.Poster" alt="">
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Yor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Producer.Name)
                    </td>
                    <td>
                        @foreach (var x in item.Actors)
                        {
                            <p>@x.Name</p>
                        }
                    </td>
                    <td>
                        <button type="button" class="btn btn-danger btn-md">@Html.ActionLink("Edit", "Edit", new { id = item.MovieId })</button>
                        <button type="button" class="btn btn-danger btn-md">@Html.ActionLink("Details", "Details", new { id = item.MovieId }) </button>
                        <button type="button" class="btn btn-danger btn-md">@Html.ActionLink("Delete", "Delete", new { id = item.MovieId }) </button>
                    </td>
                </tr>
            }

        </table>
